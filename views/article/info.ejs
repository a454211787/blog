<%- include('../layout/head') %>
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="text-center">
                    <%= infos.title %>
                        <sub><%= infos.authorId %></sub>
                </h2>
            </div>
        </div>

        <% if(islogin && user.id == infos.authorId){ %>
            <div class="row">
                <div class="col-lg-12">
                    <h6 class="text-right">
                        <a href="/article/edit/<%= infos.id %>" class="btn btn-info">编辑</a>
                        <span class="btn btn-info" id="del">删除</span>
                    </h6>
                </div>
            </div>

            <% } %>
                <div class="row">
                    <div class="col-lg-12">
                        <hr>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <blockquote>
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer posuere erat a ante.</p>
                        </blockquote>
                        <p>
                            <%- infos.content %>
                        </p>
                    </div>
                </div>
    </div>
    <script>
        $(function() {
            $("#del").on('click', function() {
                $.ajax({
                    url: '/article/del/<%= infos.id %>',
                    type: 'get',
                    success: function(data) {
                        if (data.status != 200) {
                            return console.log('删除失败')
                        }
                        location.assign(data.url)
                    }
                })
            })
        })
    </script>
    <%- include('../layout/footer') %>